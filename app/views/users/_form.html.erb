<%=form_with(model: @user) do |f|%>
<div class="form-field">
	<%=f.label :name%>
	<%=f.text_field :name, placeholder: "Enter Name"%>
</div>

<div class="form-field">
	<%=f.label :email%>
	<%=f.text_field :email, placeholder: "Enter Email"%>
</div>

<div class="form-field">
	<%=f.label :role%>
	<%=f.select :role, User.roles.keys.map {|role| [role.humanize, role]}, {prompt: "Select User Role"}%>
</div>

<div class="form-field">
	<%=f.label :password%>
	<%=f.password_field :password, placeholder: "Enter Password"%>
</div>

<div class="form-field">
	<%=f.label :password_confirmation%>
	<%=f.password_field :password_confirmation, placeholder: "Enter Password Confirmation"%>
</div>

<div class="form-field">
	<%=f.submit "create"%>
</div>

<%end%>