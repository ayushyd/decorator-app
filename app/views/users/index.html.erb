<h1>User List</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <%@users.each do |usr|%>
    <tr>
      <th scope="row"><%=usr.id%></th>
      <td><%=usr.safe_name%></td>
      <td><%=usr.email%></td>
      <td><%=usr.role%></td>
      <td><%=link_to "Edit", edit_user_path(id: usr.id), class: "btn btn-primary"%> : <%=button_to "Destroy", user_path(id:usr.id), method: :delete, class: "btn btn-danger"%> : <%=link_to "Show", user_path(id: usr.id), class: "btn btn-secondary"%> 
    </tr>
    <%end%>
     </tbody>
</table>

<%=link_to "New User", new_user_path, class: "btn btn-primary"%>